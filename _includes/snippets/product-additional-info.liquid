{% for section in product.additional_sections %}
  <div class="accordion">
    <div class="accordion__header" data-accordion="trigger">
      <h3 class="accordion__heading">{{ section.title }}</h3>
    </div>
    <div class="accordion__content">
      <div class="html-formatter">
        {{ section.bodyHtml }}
      </div>
    </div>
  </div>
{% endfor %}
